<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SonucActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="30dp"

        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"

            android:padding="3dp">

            <TextView
                android:id="@+id/textViewSonuc"
                android:layout_width="wrap_content"
                android:layout_height="100dp"

                android:layout_marginStart="1dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="1dp"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Planlanan Oruç Süresi: 14 saat" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="424dp"
                android:layout_height="119dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="1dp"
                android:text=" Sağlık sorunlarınız varsa  doktorunuza danışınız."
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/button4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewSonuc" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/ssss"
                android:onClick="geri"
                android:text="Geri"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
