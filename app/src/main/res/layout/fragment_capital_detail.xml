<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CapitalDetailFragment">

    <TextView
        android:id="@+id/capital_text_view"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginTop="450dp"
        android:gravity="center"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/flag_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/beyaz"
        android:layout_below="@id/capital_text_view"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_below="@id/flag_image_view">

        <Button
            android:id="@+id/population_button"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_glow"
            android:backgroundTint="@color/lavender"
            android:fontFamily="sans-serif-black"
            android:text="Başkent ve Ülke Nüfus Bilgileri"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/quiz_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/button_glow"
            android:backgroundTint="@color/lavender"
            android:fontFamily="sans-serif-black"
            android:onClick="quizekrannagit"
            android:text="Quiz"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</FrameLayout>
