<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="55dp"
    android:paddingBottom="60dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/weight" />

            <androidx.cardview.widget.CardView
                android:layout_width="367dp"
                android:layout_height="277dp"
                android:layout_marginTop="2dp"
                android:backgroundTint="@color/material_dynamic_secondary95"

                android:orientation="vertical"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                app:cardPreventCornerOverlap="true">

                <TextView
                    android:id="@+id/tv_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="VKE"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/weight_field"
                    android:layout_width="338dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/setting_list_background"
                    android:drawableLeft="@mipmap/ic_weight"
                    android:hint="  Kilo (kg)"
                    android:inputType="numberDecimal"
                    android:drawablePadding="30dp"
                    android:padding="10dp"
                    android:paddingStart="40dp"
                    android:paddingLeft="90dp"
                    android:paddingRight="20dp" />


                <EditText
                    android:id="@+id/height_field"
                    android:layout_width="335dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="172dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/setting_list_background"
                    android:drawableLeft="@mipmap/ic_height"
                    android:hint="Boy (cm)"
                    android:inputType="numberDecimal"
                    android:padding="7dp" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/result_text"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="2dp"
                android:visibility="invisible"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sonuc_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/calculate_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Hesapla"
                android:textColor="@android:color/white"
                android:background="@drawable/button_glow"
                android:backgroundTint="@color/dark_blue"
                android:padding="10dp" />





        </LinearLayout>
    </ScrollView>
</RelativeLayout>
