<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/alarm"
    android:padding="16dp">


    <TextView
        android:id="@+id/oruc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textAlignment="center"
     android:layout_marginTop="105dp"
        android:text="Oruç tutuyorsunuz!  "
        android:paddingBottom="25dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/countdownTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="164dp"
        android:layout_height="52dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/button_glow"
        android:fontFamily="sans-serif-black"
        android:backgroundTint="@color/urgent_important_color"
        android:text="Orucu Durdur"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/duraklatButton"
        android:layout_width="164dp"
        android:layout_height="52dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_glow"
        android:fontFamily="sans-serif-black"
        android:backgroundTint="@color/urgent_important_color"
        android:text="Sayacı Duraklat"
        android:textColor="@color/white" />
</LinearLayout>
