<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Oruç Tutma Planı"
        android:textSize="27sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text="Oruç Tutma Başlangıcı" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/oruc_baslangic"
            android:padding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="600dp"
        android:layout_marginTop="20dp"

        android:orientation="vertical">

        <!-- Diğer bileşenler -->

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="600dp"
            android:layout_margin="7dp"
            android:layout_marginTop="100dp"

            android:orientation="vertical"
            android:padding="14dp">

            <!-- CardView 1 -->
            <androidx.cardview.widget.CardView

                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Transparent"
                android:layout_marginBottom="18dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="116dp"
                    android:background="@drawable/white_box"

                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="13dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="25dp"
                        android:layout_weight="1"
                        android:text="12-12"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:text="       -"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="89dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="12 saatlik oruç"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:text="        -"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="99dp"
                        android:layout_marginTop="-5dp"
                        android:layout_weight="1"
                        android:text="12 saatlik yeme dönemi"
                        android:textSize="19.7sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- CardView 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Transparent"
                android:layout_marginBottom="18dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="116dp"
                    android:background="@drawable/white_box"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="16dp"
                        android:layout_height="62dp"
                        android:layout_marginTop="25dp"
                        android:layout_weight="1"
                        android:text=" 14-10 "
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:text="        -"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="104dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="14 saatlik oruç"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:text="        -"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="116dp"
                        android:layout_marginTop="-3dp"
                        android:layout_weight="1"
                        android:text="10 saatlik yeme dönemi"
                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Diğer CardView'ları buraya ekleyin -->
            <!-- CardView 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:backgroundTint="@color/Transparent"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="116dp"

                    android:background="@drawable/white_box"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="12dp"
                        android:layout_height="82dp"
                        android:layout_marginTop="27dp"
                        android:layout_weight="1"
                        android:text="  16-8"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:text="        -"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="102dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="16 saatlik oruç"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:text="        -"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="8 saatlik yeme dönemi"
                        android:layout_marginTop="-3dp"
                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- CardView 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Transparent"
                android:layout_marginBottom="18dp"
                android:padding="16dp">

                <LinearLayout

                    android:layout_width="match_parent"

                    android:layout_height="116dp"

                    android:background="@drawable/white_box"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="13dp"
                        android:layout_height="79dp"
                        android:layout_marginTop="28dp"
                        android:layout_weight="1"
                        android:text="  20-4"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:text="        -"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="94dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="20 saatlik oruç"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:text="        -"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="103dp"
                        android:layout_marginTop="-3dp"
                        android:layout_weight="1"
                        android:text="4 saatlik yeme dönemi "
                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Diğer bileşenler -->

    </LinearLayout>
</LinearLayout>